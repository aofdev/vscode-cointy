{
  "name": "cointy",
  "displayName": "cointy",
  "description": "Live Cryptocurrency Prices",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:coinGeckoTreeView",
    "onView:coinMarketCapTreeView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cointy-explorer",
          "title": "Cointy Explorer",
          "icon": "resources/light/cointy-light.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "coinGeckoTreeView.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "coinMarketCapTreeView.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "views": {
      "cointy-explorer": [
        {
          "id": "coinGeckoTreeView",
          "name": "CoinGecko"
        },
        {
          "id": "coinMarketCapTreeView",
          "name": "coinMarketCap"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "coinGeckoTreeView.refreshEntry",
          "when": "view == coinGeckoTreeView",
          "group": "navigation"
        },
        {
          "command": "coinMarketCapTreeView.refreshEntry",
          "when": "view == coinMarketCapTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^15.0.1",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "~8.3.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "prettier": "~2.2.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "currency.js": "^2.0.3",
    "gaxios": "^4.2.1"
  }
}
